page {
  height: 100%;
}
#select {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  height: -webkit-calc(100% - 40rpx);
  height: calc(100% - 40rpx);
}
#select .info {
    text-align: center;
}
#select .info > view {
      padding: 20rpx;
}
#select .info > image {
      width: 150rpx;
      height: 150rpx;
      -webkit-border-radius: 50%;
              border-radius: 50%;
      will-change: transform;
      border: 1px solid #E1E1E1;
}
#select .btn {
    margin-top: 50rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
        -ms-flex-direction: column;
            flex-direction: column;
    padding: 20rpx 0;
}
#select .btn > view:nth-of-type(1) {
      font-weight: bold;
}
#select .btn > view:nth-of-type(2),
    #select .btn > view:nth-of-type(3) {
      -webkit-border-radius: 5rpx;
              border-radius: 5rpx;
      width: 70%;
      height: 80rpx;
      line-height: 80rpx;
      text-align: center;
      margin: 40rpx 0;
}
#select .btn > view:nth-of-type(2) {
      -webkit-box-shadow: 0 0 8px 2px #FA893B;
              box-shadow: 0 0 8px 2px #FA893B;
}
#select .btn > view:nth-of-type(3) {
      background: #454454;
      color: white;
      -webkit-box-shadow: 0 0 8px 2px #454454;
              box-shadow: 0 0 8px 2px #454454;
}
#select .bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: -webkit-calc(100% - 40rpx);
    width: calc(100% - 40rpx);
    padding: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999999;
}
#select .bottom > view:nth-of-type(1),
    #select .bottom > view:nth-of-type(2) {
      line-height: 1.5;
}
#select .bottom > view:nth-of-type(2) {
      padding-bottom: 20rpx;
}
#select .bottom > view:nth-of-type(3) {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
          -ms-flex-pack: justify;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
}
#select .setting {
    position: fixed;
    top: 20rpx;
    left: 20rpx;
    width: 50rpx;
    height: 50rpx;
    -webkit-border-radius: 50%;
            border-radius: 50%;
    -webkit-box-shadow: 0 0 8px 2px #FA893B;
            box-shadow: 0 0 8px 2px #FA893B;
    overflow: hidden;
}
#select .setting > image {
      width: 100%;
      height: 100%;
}

