page {
  height: 100%;
}
#evaluate {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #F9F9F9;
  height: -webkit-calc(100% - 40rpx);
  height: calc(100% - 40rpx);
}
#evaluate .title {
    text-align: center;
    padding-bottom: 20rpx;
}
#evaluate .info {
    border: 1px solid #E1E1E1;
    -webkit-border-radius: 5px;
            border-radius: 5px;
    padding: 20rpx;
    background: white;
}
#evaluate .info > view {
      line-height: 1.5;
}
#evaluate .message {
    border: 1px solid #E1E1E1;
    -webkit-border-radius: 5px;
            border-radius: 5px;
    padding: 20rpx;
    background: white;
    margin-top: 20rpx;
}
#evaluate .message > textarea {
      border: 1px solid #E1E1E1;
      margin-top: 20rpx;
      width: -webkit-calc(100% - 20rpx);
      width: calc(100% - 20rpx);
      height: 200rpx;
      padding: 10rpx;
      -webkit-border-radius: 5px;
              border-radius: 5px;
}
#evaluate .btn {
    width: 60%;
    margin: auto;
    background: #FA893B;
    color: white;
    text-align: center;
    padding: 15rpx 0;
    -webkit-border-radius: 5px;
            border-radius: 5px;
    margin-top: 20rpx;
}

