page {
  height: 100%;
}
#order_detail {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #F9F9F9;
  height: -webkit-calc(100% - 40rpx);
  height: calc(100% - 40rpx);
}
#order_detail > view:nth-of-type(1) {
    padding-bottom: 20rpx;
}
#order_detail .top {
    background: white;
    padding: 20rpx;
    -webkit-border-radius: 5px;
            border-radius: 5px;
}
#order_detail .top > navigator,
    #order_detail .top > .btn {
      border: 1px solid #FA893B;
      color: #FA893B;
      -webkit-border-radius: 5px;
              border-radius: 5px;
      padding: 8rpx 40rpx;
      display: inline-block;
      margin-top: 20rpx;
}
#order_detail .middle {
    margin: 20rpx 0;
    padding: 20rpx 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    background: white;
    -webkit-border-radius: 5px;
            border-radius: 5px;
}
#order_detail .middle > image {
      width: 150rpx;
      height: 150rpx;
}
#order_detail .bottom {
    padding-top: 20rpx;
    background: white;
    -webkit-border-radius: 5px;
            border-radius: 5px;
}
#order_detail .bottom > .adress,
    #order_detail .bottom > .info,
    #order_detail .bottom > .price {
      padding: 20rpx;
}
#order_detail .bottom > .btn {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      height: 100rpx;
      border-top: 1px solid #E1E1E1;
}
#order_detail .bottom > .btn > view {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
            -ms-flex-pack: center;
                justify-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
            -ms-flex-align: center;
                align-items: center;
        -webkit-flex-basis: 50%;
            -ms-flex-preferred-size: 50%;
                flex-basis: 50%;
        height: 100%;
}
#order_detail .bottom > .btn > view > image {
          width: 40rpx;
          height: 40rpx;
          will-change: transform;
          margin-right: 20rpx;
}
#order_detail .bottom > .btn > view:nth-of-type(1) {
        border-right: 1px solid #E1E1E1;
}
#order_detail .bottom > .singleBtn {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
          -ms-flex-pack: center;
              justify-content: center;
      height: 100rpx;
      border-top: 1px solid #E1E1E1;
}
#order_detail .bottom > .singleBtn > image {
        width: 40rpx;
        height: 40rpx;
        will-change: transform;
        margin-right: 20rpx;
}

